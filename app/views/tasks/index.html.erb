<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<p1><%= link_to 'New Task', new_task_path %>
<%= link_to 'Home', controller: :welcome %>
</p1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.start_time %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4>
<%= month_calendar events: @tasks do |date, tasks| %>
  <%= date %>

  <% tasks.each do |tasks| %>
    <div>
      <%= link_to "#{tasks.name}", tasks %>
    </div>
  <% end %>
</h4>
<% end %>


